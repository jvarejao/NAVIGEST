<?xml version="1.0" encoding="utf-8"?>
<toolkit:Popup x:Class="NAVIGEST.iOS.Popups.SelectionListPopup"
               xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
               CanBeDismissedByTappingOutsideOfPopup="True">
    <toolkit:Popup.Size>
        <Size Width="320" Height="600" />
    </toolkit:Popup.Size>

    <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
            StrokeThickness="0"
            Padding="0"
            StrokeShape="RoundRectangle 12">
        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <!-- Header -->
            <Label x:Name="TitleLabel"
                   Grid.Row="0"
                   Text="Selecione"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Padding="16"
                   TextColor="{DynamicResource BodyTextColor}"/>
            
            <BoxView Grid.Row="0" VerticalOptions="End" HeightRequest="1" Color="{DynamicResource SeparatorColor}" />

            <!-- Search Bar -->
            <SearchBar x:Name="SearchEntry"
                       Grid.Row="1"
                       Placeholder="Pesquisar..."
                       TextChanged="OnSearchTextChanged"
                       BackgroundColor="Transparent"
                       Margin="8,0"
                       ios:SearchBar.SearchBarStyle="Minimal"/>

            <!-- List -->
            <CollectionView x:Name="ItemsCollectionView"
                            Grid.Row="2"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="16,12">
                            <Label Text="{Binding .}"
                                   FontSize="16"
                                   TextColor="{DynamicResource BodyTextColor}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Footer -->
            <Button Grid.Row="3"
                    Text="Cancelar"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource AppAccent}"
                    Clicked="OnCancelClicked"
                    Margin="0,0,0,8"/>
        </Grid>
    </Border>
</toolkit:Popup>