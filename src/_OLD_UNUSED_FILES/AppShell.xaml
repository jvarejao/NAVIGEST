<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppLoginMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:AppLoginMaui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="AppLoginMaui">

    <!-- Rotas/páginas já existentes -->
    <ShellContent ContentTemplate="{DataTemplate pages:SplashIntroPage}" Route="SplashIntroPage" />
    <ShellContent ContentTemplate="{DataTemplate pages:WelcomePage}" Route="WelcomePage" />
    <ShellContent ContentTemplate="{DataTemplate pages:MainYahPage}" Route="mainpage" />

    <!-- NOVO: Página de Horas (layout do Passo 1) -->
    <ShellContent
        Title="Horas"
        Route="hours-entry"
        ContentTemplate="{DataTemplate pages:HoursEntryPage}" />
</Shell>








