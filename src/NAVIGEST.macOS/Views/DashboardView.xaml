<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Toolkit.Charts;assembly=Syncfusion.Maui.Toolkit"
             xmlns:vm="clr-namespace:NAVIGEST.macOS.ViewModels"
             xmlns:models="clr-namespace:NAVIGEST.macOS.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:strings="clr-namespace:NAVIGEST.macOS.Resources.Strings"
             x:Class="NAVIGEST.macOS.Views.DashboardView"
             x:DataType="vm:DashboardViewModel"
             x:Name="dashboardView">

    <ContentView.Resources>
        <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#1C1C1E}"/>
            <Setter Property="StrokeThickness" Value="0"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label" x:Key="LabelCaption">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
        </Style>
        <Style TargetType="Label" x:Key="LabelValue">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </ContentView.Resources>

    <Grid>
        <!-- Main Layout Grid (No ScrollView) -->
        <Grid x:Name="ContentContainer" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="16" Padding="16,16,16,16">

            <!-- 1. HEADER / PICKER (Custom Style like Tab 2) -->
            <Grid Grid.Row="0" RowDefinitions="Auto,Auto" RowSpacing="6">
                <Label Text="{x:Static strings:AppResources.Common_Collaborator}" FontSize="14" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                <Border Grid.Row="1" BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}" StrokeThickness="0" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenCollaboratorPickerCommand}"/>
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="{Binding SelectedColaborador.Nome, TargetNullValue='Selecione colaborador'}" Padding="12,10" VerticalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1" Text="â–¼" FontSize="12" Padding="12,10" VerticalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- 2. METRICS GRID (2x2) -->
            <Grid Grid.Row="1" RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10">
                
                <!-- Total Hours (Blue) -->
                                <!-- Total Hours (Blue) -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="&#xf017;" FontFamily="FA7Solid" FontSize="20" TextColor="#0A84FF" HorizontalOptions="End"/>
                        <Label Text="{x:Static strings:AppResources.Dashboard_TotalHours}" Style="{StaticResource LabelCaption}"/>
                        <Label Text="{Binding Metrics.TotalHoras, StringFormat='{0:F1}h'}" 
                               Style="{StaticResource LabelValue}" TextColor="#0A84FF"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Total Days (Green) -->
                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="&#xf073;" FontFamily="FA7Solid" FontSize="20" TextColor="#34C759" HorizontalOptions="End"/>
                        <Label Text="{x:Static strings:AppResources.Dashboard_WorkedDays}" Style="{StaticResource LabelCaption}"/>
                        <Label Text="{Binding Metrics.TotalDiasTrabalhados}" 
                               Style="{StaticResource LabelValue}" TextColor="#34C759"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Average Hours (Orange) -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="&#xf201;" FontFamily="FA7Solid" FontSize="20" TextColor="#FF9500" HorizontalOptions="End"/>
                        <Label Text="{x:Static strings:AppResources.Dashboard_DailyAverage}" Style="{StaticResource LabelCaption}"/>
                        <Label Text="{Binding Metrics.MediaHorasDia, StringFormat='{0:F1}h'}" 
                               Style="{StaticResource LabelValue}" TextColor="#FF9500"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Balance (Purple) -->
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="&#xf24e;" FontFamily="FA7Solid" FontSize="20" TextColor="#AF52DE" HorizontalOptions="End"/>
                        <Label Text="{x:Static strings:AppResources.Dashboard_Balance}" Style="{StaticResource LabelCaption}"/>
                        <Label Text="{Binding Metrics.SaldoHoras, StringFormat='{0:F1}h'}" 
                               Style="{StaticResource LabelValue}" TextColor="#AF52DE"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- 3. MAIN CHART (Annual Evolution) -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Header with Buttons -->
                    <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,10">
                        <Label Text="{x:Static strings:AppResources.Dashboard_Evolution}" FontAttributes="Bold" FontSize="16" VerticalOptions="Center"/>
                        
                        <!-- Month Selector + Annual Button -->
                        <ScrollView Grid.Column="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="20,0,0,0" VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="10">
                                <!-- Annual Button -->
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" Padding="16,8" BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ShowAnnualViewCommand}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding IsAnnualView}" Value="True">
                                            <Setter Property="BackgroundColor" Value="#0A84FF"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <Label Text="{x:Static strings:AppResources.Dashboard_Annual}" FontSize="14" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsAnnualView}" Value="True">
                                                <Setter Property="TextColor" Value="White"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </Border>

                                <!-- Months List -->
                                <HorizontalStackLayout BindableLayout.ItemsSource="{Binding MonthlyData}" Spacing="10">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:DataType="{x:Null}" StrokeShape="RoundRectangle 10" StrokeThickness="0" Padding="16,8" BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding BindingContext.SelectDetailMonthCommand, Source={x:Reference dashboardView}}" CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Border.Triggers>
                                                    <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="BackgroundColor" Value="#0A84FF"/>
                                                    </DataTrigger>
                                                </Border.Triggers>
                                                <Label Text="{Binding Mes}" FontSize="14" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="TextColor" Value="White"/>
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                            </Border>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                        </ScrollView>
                    </Grid>

                    <!-- Charts Container -->
                    <Grid Grid.Row="1">
                        <!-- ANNUAL CHART -->
                        <chart:SfCartesianChart IsVisible="{Binding IsAnnualView}" 
                                              HorizontalOptions="Fill" 
                                              HeightRequest="450">
                            
                            <chart:SfCartesianChart.Legend>
                                <chart:ChartLegend Placement="Bottom"/>
                            </chart:SfCartesianChart.Legend>

                            <chart:SfCartesianChart.TooltipBehavior>
                                <chart:ChartTooltipBehavior/>
                            </chart:SfCartesianChart.TooltipBehavior>

                            <chart:SfCartesianChart.XAxes>
                                <chart:CategoryAxis LabelPlacement="BetweenTicks" ShowMajorGridLines="False">
                                    <chart:CategoryAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </chart:CategoryAxis.LabelStyle>
                                </chart:CategoryAxis>
                            </chart:SfCartesianChart.XAxes>
                            
                            <chart:SfCartesianChart.YAxes>
                                <chart:NumericalAxis IsVisible="True" Minimum="0" ShowMajorGridLines="False">
                                    <chart:NumericalAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" FontSize="14" FontAttributes="Bold"/>
                                    </chart:NumericalAxis.LabelStyle>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.YAxes>

                            <!-- 1. Reais (Green) -->
                            <chart:LineSeries Label="{x:Static strings:AppResources.Dashboard_RealHours}"
                                            ItemsSource="{Binding MonthlyData}"
                                            XBindingPath="Mes"
                                            YBindingPath="HorasNormais"
                                            Fill="#34C759"
                                            StrokeWidth="4"
                                            EnableTooltip="True"
                                            ShowDataLabels="True">
                                <chart:LineSeries.DataLabelSettings>
                                    <chart:CartesianDataLabelSettings LabelPlacement="Outer" UseSeriesPalette="False">
                                        <chart:CartesianDataLabelSettings.LabelStyle>
                                            <chart:ChartDataLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" FontSize="12" FontAttributes="Bold"/>
                                        </chart:CartesianDataLabelSettings.LabelStyle>
                                    </chart:CartesianDataLabelSettings>
                                </chart:LineSeries.DataLabelSettings>
                            </chart:LineSeries>

                            <!-- 2. Ideais (Gray Dashed) -->
                            <chart:LineSeries Label="{x:Static strings:AppResources.Dashboard_IdealHours}"
                                            ItemsSource="{Binding MonthlyData}"
                                            XBindingPath="Mes"
                                            YBindingPath="HorasIdeais"
                                            Fill="#8E8E93"
                                            StrokeWidth="2"
                                            StrokeDashArray="6,6"
                                            EnableTooltip="True"/>

                            <!-- 3. Extra (Orange) -->
                            <chart:LineSeries Label="{x:Static strings:AppResources.Dashboard_ExtraHours}"
                                            ItemsSource="{Binding MonthlyData}"
                                            XBindingPath="Mes"
                                            YBindingPath="HorasExtras"
                                            Fill="#FF9500"
                                            StrokeWidth="2"
                                            EnableTooltip="True"/>
                            
                            <!-- Interaction: Selection -->
                            <chart:SfCartesianChart.SelectionBehavior>
                                <chart:SeriesSelectionBehavior Type="Single" SelectionBrush="#34C759" SelectedIndex="{Binding SelectedChartIndex, Mode=TwoWay}" />
                            </chart:SfCartesianChart.SelectionBehavior>
                        </chart:SfCartesianChart>

                        <!-- DAILY CHART (Replaces Popup) -->
                        <chart:SfCartesianChart IsVisible="{Binding IsAnnualView, Converter={toolkit:InvertedBoolConverter}}" 
                                              HorizontalOptions="Fill" 
                                              HeightRequest="450">
                            
                            <chart:SfCartesianChart.Legend>
                                <chart:ChartLegend Placement="Bottom"/>
                            </chart:SfCartesianChart.Legend>

                            <chart:SfCartesianChart.TooltipBehavior>
                                <chart:ChartTooltipBehavior/>
                            </chart:SfCartesianChart.TooltipBehavior>

                            <chart:SfCartesianChart.XAxes>
                                <chart:CategoryAxis LabelPlacement="BetweenTicks" ShowMajorGridLines="False">
                                    <chart:CategoryAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </chart:CategoryAxis.LabelStyle>
                                </chart:CategoryAxis>
                            </chart:SfCartesianChart.XAxes>
                            
                            <chart:SfCartesianChart.YAxes>
                                <chart:NumericalAxis IsVisible="True" Minimum="0" ShowMajorGridLines="False">
                                    <chart:NumericalAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" FontSize="14" FontAttributes="Bold"/>
                                    </chart:NumericalAxis.LabelStyle>
                                </chart:NumericalAxis>
                            </chart:SfCartesianChart.YAxes>

                            <!-- 1. Reais (Green) -->
                            <chart:LineSeries Label="{x:Static strings:AppResources.Dashboard_RealHours}"
                                            ItemsSource="{Binding SelectedMonthDailyData}"
                                            XBindingPath="Data.Day"
                                            YBindingPath="HorasNormais"
                                            Fill="#34C759"
                                            StrokeWidth="3"
                                            ShowDataLabels="True"
                                            ShowMarkers="True"
                                            EnableTooltip="True">
                                <chart:LineSeries.MarkerSettings>
                                    <chart:ChartMarkerSettings Type="Circle" Height="8" Width="8" Fill="#34C759" />
                                </chart:LineSeries.MarkerSettings>
                                <chart:LineSeries.DataLabelSettings>
                                    <chart:CartesianDataLabelSettings LabelPlacement="Outer">
                                        <chart:CartesianDataLabelSettings.LabelStyle>
                                            <chart:ChartDataLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" FontSize="12"/>
                                        </chart:CartesianDataLabelSettings.LabelStyle>
                                    </chart:CartesianDataLabelSettings>
                                </chart:LineSeries.DataLabelSettings>
                            </chart:LineSeries>

                            <!-- 2. Ideais (Gray Dashed) -->
                            <chart:LineSeries Label="{x:Static strings:AppResources.Dashboard_IdealHours}"
                                            ItemsSource="{Binding SelectedMonthDailyData}"
                                            XBindingPath="Data.Day"
                                            YBindingPath="HorasIdeais"
                                            Fill="#8E8E93"
                                            StrokeWidth="2"
                                            StrokeDashArray="6,6"
                                            EnableTooltip="True"/>

                            <!-- 3. Extra (Orange) -->
                            <chart:LineSeries Label="{x:Static strings:AppResources.Dashboard_ExtraHours}"
                                            ItemsSource="{Binding SelectedMonthDailyData}"
                                            XBindingPath="Data.Day"
                                            YBindingPath="HorasExtras"
                                            Fill="#FF9500"
                                            StrokeWidth="2"
                                            EnableTooltip="True"/>

                            <!-- 4. Absences (Red Markers) -->
                            <chart:ScatterSeries Label="{x:Static strings:AppResources.Dashboard_Absences}"
                                                ItemsSource="{Binding SelectedMonthDailyData}"
                                                XBindingPath="Data.Day"
                                                YBindingPath="AbsencePoint"
                                                PointHeight="12"
                                                PointWidth="12"
                                                Fill="#FF3B30"
                                                EnableTooltip="True"/>

                        </chart:SfCartesianChart>
                    </Grid>
                </Grid>
            </Border>



            <!-- 4. ACCUMULATIVE ABSENCES -->
            <VerticalStackLayout Grid.Row="3" Spacing="10">
                <Label Text="{x:Static strings:AppResources.Dashboard_AbsencesAccumulated}" FontAttributes="Bold" FontSize="16" Margin="0,10,0,0"/>
                
                <!-- Replaced CollectionView with FlexLayout for better sizing -->
                <FlexLayout BindableLayout.ItemsSource="{Binding AbsenceData}" 
                            Wrap="Wrap" 
                            JustifyContent="Start" 
                            AlignItems="Start"
                            Direction="Row">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border x:DataType="{x:Null}" StrokeShape="RoundRectangle 10"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
                                    StrokeThickness="0"
                                    Padding="10"
                                    HeightRequest="80"
                                    WidthRequest="100"
                                    Margin="0,0,10,10">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.ShowAbsenceDetailsCommand, Source={x:Reference dashboardView}}"
                                                          CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                                <Border.Shadow>
                                    <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                                </Border.Shadow>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center" HorizontalOptions="Center">
                                    <Label Text="{Binding Icon}" FontFamily="FA7Solid" FontSize="20" TextColor="{Binding Cor}" HorizontalOptions="Center"/>
                                    <Label Text="{Binding Tipo}" FontSize="10" HorizontalOptions="Center" LineBreakMode="TailTruncation" MaxLines="1"/>
                                    <Label Text="{Binding Dias, StringFormat='{0} dias'}" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </VerticalStackLayout>
        </Grid>

        <!-- COLLABORATOR PICKER OVERLAY -->
        <Grid x:Name="CollaboratorPickerOverlay"
              IsVisible="{Binding IsCollaboratorPickerVisible}"
              BackgroundColor="#80000000"
              IgnoreSafeArea="True"
              ZIndex="1001">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCollaboratorPickerCommand}"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
                    StrokeThickness="0"
                    Padding="20"
                    StrokeShape="RoundRectangle 18"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="400"
                    HeightRequest="600">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="15">
                    <Label Text="{x:Static strings:AppResources.Dashboard_SelectCollaborator}"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                    <!-- Search Bar -->
                    <Border Grid.Row="1" 
                            StrokeShape="RoundRectangle 10" 
                            BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}"
                            StrokeThickness="0"
                            Padding="8,0">
                        <Entry Placeholder="{x:Static strings:AppResources.Common_Search}"
                               Text="{Binding CollaboratorSearchText}"
                               BackgroundColor="Transparent"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               HeightRequest="36"/>
                    </Border>

                    <CollectionView Grid.Row="2" ItemsSource="{Binding FilteredColaboradores}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border x:DataType="{x:Null}" StrokeThickness="0" BackgroundColor="Transparent" Padding="12">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.SelectCollaboratorCommand, Source={x:Reference dashboardView}}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding Nome}" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Grid.Row="3" 
                            Text="{x:Static strings:AppResources.Common_Cancel}" 
                            TextColor="{AppThemeBinding Light=#0A84FF, Dark=#0A84FF}"
                            BackgroundColor="Transparent"
                            Command="{Binding CloseCollaboratorPickerCommand}"/>
                </Grid>
            </Border>
        </Grid>



        <!-- ABSENCE DETAIL OVERLAY -->
        <Grid x:Name="AbsenceDetailOverlay"
              IsVisible="{Binding IsAbsenceDetailVisible}"
              BackgroundColor="#80000000"
              IgnoreSafeArea="True"
              ZIndex="1002">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseAbsenceDetailCommand}"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
                    StrokeThickness="0"
                    Padding="20"
                    StrokeShape="RoundRectangle 18"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="300"
                    HeightRequest="400">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>

                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="15">
                    <!-- 1. Collaborator Name -->
                    <Label Text="{Binding SelectedCollaboratorName}" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                    <!-- 2. Icon + Type -->
                    <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                        <Label Text="{Binding SelectedAbsenceSummary.Icon}" 
                               FontSize="24"
                               FontFamily="FA7Solid"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Text="{Binding SelectedAbsenceSummary.Tipo}" 
                               FontSize="18" 
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </StackLayout>

                    <!-- 3. List of days -->
                    <CollectionView Grid.Row="2" ItemsSource="{Binding SelectedAbsenceDetails}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Label Text="{Binding .}" Padding="0,8" HorizontalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Grid.Row="3" Text="{x:Static strings:AppResources.Common_Close}" Command="{Binding CloseAbsenceDetailCommand}" BackgroundColor="Transparent" TextColor="#0A84FF"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentView>
