<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:NAVIGEST.macOS.Models"
             x:Class="NAVIGEST.macOS.Pages.ServiceDetailPage"
             Title="Detalhe do Serviço"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20" MaximumWidthRequest="900" HorizontalOptions="Center">
            
            <!-- Company Header -->
            <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,10">
                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                    <Label Text="{Binding CurrentUser.CompanyName}" FontSize="28" FontAttributes="Bold" TextColor="{DynamicResource AccentColor}"/>
                    <Label Text="{Binding CurrentUser.CompanyAddress}" FontSize="14" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding CurrentUser.CompanyAddress, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="{Binding CurrentUser.CompanyZip}" FontSize="14" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding CurrentUser.CompanyZip, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                        <Label Text="{Binding CurrentUser.CompanyCity}" FontSize="14" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding CurrentUser.CompanyCity, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                    </HorizontalStackLayout>
                    <Label Text="{Binding CurrentUser.CompanyNif, StringFormat='NIF: {0}'}" FontSize="14" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding CurrentUser.CompanyNif, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                </VerticalStackLayout>
                <!-- Logo -->
                <Border Grid.Column="1" StrokeShape="RoundRectangle 8" Stroke="{DynamicResource SeparatorColor}" StrokeThickness="1" HeightRequest="100" WidthRequest="100" BackgroundColor="White" IsVisible="{Binding CompanyLogoSource, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                    <Image Source="{Binding CompanyLogoSource}" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
            </Grid>

            <BoxView HeightRequest="1" Color="{DynamicResource SeparatorColor}" Margin="0,0,0,10"/>

            <!-- Invoice Info & Customer -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="20">
                <!-- Left: Customer Info -->
                <Border StrokeShape="RoundRectangle 12" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" Padding="24">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="CLIENTE" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" CharacterSpacing="1"/>
                        <Label Text="{Binding Order.CustomerName}" FontSize="18" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}" />
                        <Label Text="{Binding Order.CustomerNo, StringFormat='Nº Cliente: {0}'}" FontSize="14" TextColor="{DynamicResource BodyTextColor}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Right: Order Info -->
                <Border Grid.Column="1" StrokeShape="RoundRectangle 12" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" Padding="24">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="DETALHES DO SERVIÇO" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" CharacterSpacing="1"/>
                        
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto">
                            <Label Text="Nº Documento:" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="1" Text="{Binding Order.OrderNo}" FontAttributes="Bold" TextColor="{DynamicResource AccentColor}"/>

                            <Label Grid.Row="1" Text="Data:" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Order.OrderDate, StringFormat='{0:dd/MM/yyyy}'}" TextColor="{DynamicResource BodyTextColor}"/>

                            <Label Grid.Row="2" Text="Estado:" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Order.OrderStatus}" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Products List -->
            <Border StrokeShape="RoundRectangle 12" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" Padding="0">
                <VerticalStackLayout>
                    <!-- Table Header -->
                    <Grid ColumnDefinitions="*, 60, 60, 60, 60, 90, 100" Padding="16" BackgroundColor="{DynamicResource PageBackgroundColor}">
                        <Label Text="PRODUTO" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" />
                        <Label Grid.Column="1" Text="ALT." FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="2" Text="LARG." FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="3" Text="M²" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="4" Text="QTD" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="5" Text="PREÇO" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" HorizontalTextAlignment="End"/>
                        <Label Grid.Column="6" Text="TOTAL" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource EntryPlaceholderColor}" HorizontalTextAlignment="End"/>
                    </Grid>

                    <CollectionView ItemsSource="{Binding Products}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:OrderedProduct">
                                <Grid ColumnDefinitions="*, 60, 60, 60, 60, 90, 100" Padding="16" ColumnSpacing="8">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding ProductName}" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding ProductCode}" FontSize="12" TextColor="{DynamicResource EntryPlaceholderColor}"/>
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Cor, StringFormat='Cor: {0}'}" FontSize="12" TextColor="{DynamicResource EntryPlaceholderColor}" IsVisible="{Binding Cor, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                                            <Label Text="{Binding Tam, StringFormat='Tam: {0}'}" FontSize="12" TextColor="{DynamicResource EntryPlaceholderColor}" IsVisible="{Binding Tam, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                    
                                    <Label Grid.Column="1" Text="{Binding Altura, StringFormat='{0:N2}'}" VerticalOptions="Center" HorizontalTextAlignment="Center" TextColor="{DynamicResource BodyTextColor}" FontSize="13"/>
                                    <Label Grid.Column="2" Text="{Binding Largura, StringFormat='{0:N2}'}" VerticalOptions="Center" HorizontalTextAlignment="Center" TextColor="{DynamicResource BodyTextColor}" FontSize="13"/>
                                    <Label Grid.Column="3" Text="{Binding M2, StringFormat='{0:N2}'}" VerticalOptions="Center" HorizontalTextAlignment="Center" TextColor="{DynamicResource BodyTextColor}" FontSize="13"/>
                                    <Label Grid.Column="4" Text="{Binding Quantidade, StringFormat='{0:N0}'}" VerticalOptions="Center" HorizontalTextAlignment="Center" TextColor="{DynamicResource BodyTextColor}" FontSize="13"/>
                                    <Label Grid.Column="5" Text="{Binding PrecoUnit, StringFormat='{0:N2} €'}" VerticalOptions="Center" HorizontalTextAlignment="End" TextColor="{DynamicResource BodyTextColor}" FontSize="13"/>
                                    <Label Grid.Column="6" Text="{Binding SUBTOTAIS, StringFormat='{0:N2} €'}" VerticalOptions="Center" HorizontalTextAlignment="End" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}" FontSize="13"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Totals -->
            <Grid ColumnDefinitions="*, Auto">
                <Border Grid.Column="1" StrokeShape="RoundRectangle 12" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" Padding="24" MinimumWidthRequest="300">
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto" RowSpacing="12">
                        <Label Text="Subtotal" TextColor="{DynamicResource EntryPlaceholderColor}" />
                        <Label Grid.Column="1" Text="{Binding Order.SubTotal, StringFormat='{0:N2} €'}" HorizontalOptions="End" TextColor="{DynamicResource BodyTextColor}"/>

                        <Label Grid.Row="1" Text="IVA" TextColor="{DynamicResource EntryPlaceholderColor}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Order.TaxAmount, StringFormat='{0:N2} €'}" HorizontalOptions="End" TextColor="{DynamicResource BodyTextColor}"/>

                        <BoxView Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="1" Color="{DynamicResource SeparatorColor}" VerticalOptions="Start"/>
                        
                        <Label Grid.Row="2" Text="TOTAL" FontAttributes="Bold" FontSize="20" TextColor="{DynamicResource BodyTextColor}" VerticalOptions="End"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Order.TotalAmount, StringFormat='{0:N2} €'}" FontAttributes="Bold" FontSize="20" HorizontalOptions="End" TextColor="{DynamicResource AccentColor}" VerticalOptions="End"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- DEBUG INFO -->
            <Label Text="{Binding DebugInfo}" TextColor="Red" FontSize="12" Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>