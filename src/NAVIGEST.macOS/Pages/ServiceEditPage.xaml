<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:NAVIGEST.macOS.PageModels"
             xmlns:behaviors="clr-namespace:NAVIGEST.macOS.Behaviors"
             x:Class="NAVIGEST.macOS.Pages.ServiceEditPage"
             Title="Novo Serviço"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.BindingContext>
        <models:ServiceEditPageModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/MacInputStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">
        <!-- Toolbar -->
        <Grid ColumnDefinitions="*, Auto" Padding="20,10" BackgroundColor="{DynamicResource PageBackgroundColor}">
            <Label Text="Novo Serviço" FontSize="24" FontAttributes="Bold" VerticalOptions="Center"/>
            <HorizontalStackLayout Grid.Column="1" Spacing="10">
                <Button Text="Cancelar" Command="{Binding CancelCommand}" BackgroundColor="Transparent" TextColor="Red"/>
                <Button Text="Guardar" Command="{Binding SaveCommand}" BackgroundColor="#0A84FF" TextColor="White" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </Grid>

        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20" MaximumWidthRequest="1200" HorizontalOptions="Center">
                
                <!-- HEADER INFO -->
                <Border StrokeShape="RoundRectangle 10" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" Padding="20">
                    <Grid ColumnDefinitions="*, 180, 160, 160" ColumnSpacing="20">
                        
                        <!-- Client -->
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Cliente" TextColor="Gray" FontSize="12"/>
                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout>
                                    <Label Text="{Binding ClientName}" FontAttributes="Bold" FontSize="16" LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding ClientCode}" TextColor="Gray" FontSize="12"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1" 
                                        Text="&#xF002;" 
                                        FontFamily="FA7Solid" 
                                        FontSize="16"
                                        BackgroundColor="#190A84FF" 
                                        TextColor="#0A84FF"
                                        CornerRadius="8"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        Padding="0"
                                        Command="{Binding SelectClientCommand}" 
                                        VerticalOptions="Center"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Status -->
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Estado" Style="{StaticResource MacHeaderLabelStyle}"/>
                            <Border Style="{StaticResource MacInputBorderStyle}"
                                    HeightRequest="34"
                                    Padding="10,0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding OpenStatusPickerCommand}"/>
                                </Border.GestureRecognizers>
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="{Binding Status}" Style="{StaticResource MacInputLabelStyle}" LineBreakMode="TailTruncation"/>
                                    <Label Grid.Column="1" Text="▼" FontSize="10" VerticalOptions="Center" TextColor="Gray" Margin="5,0,0,0"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Creation Date -->
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Data Criação" Style="{StaticResource MacHeaderLabelStyle}"/>
                            <Label Text="{Binding CreationDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontAttributes="Bold" FontSize="16" VerticalOptions="Center" HeightRequest="34" VerticalTextAlignment="Center"/>
                        </VerticalStackLayout>

                        <!-- Delivery Date -->
                        <VerticalStackLayout Grid.Column="3">
                            <Label Text="Data Entrega" Style="{StaticResource MacHeaderLabelStyle}"/>
                            <Border Style="{StaticResource MacInputBorderStyle}" HeightRequest="34" Padding="0">
                                <DatePicker Date="{Binding DeliveryDate}" 
                                            Format="dd/MM/yyyy" 
                                            HeightRequest="34" 
                                            TextColor="{DynamicResource EntryTextColor}"
                                            BackgroundColor="Transparent">
                                    <DatePicker.Behaviors>
                                        <behaviors:MacInputBehavior />
                                    </DatePicker.Behaviors>
                                </DatePicker>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- PUBLIC OBS -->
                <VerticalStackLayout>
                    <Label Text="Observações (Público)" Style="{StaticResource MacHeaderLabelStyle}"/>
                    <Border Style="{StaticResource MacInputBorderStyle}" HeightRequest="100" Padding="12,8">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding Source={x:Reference ObsEditor}, Path=IsFocused}" Value="True">
                                <Setter Property="Stroke" Value="{StaticResource MacFocusBlue}"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                            </DataTrigger>
                        </Border.Triggers>
                        <Editor x:Name="ObsEditor"
                                Text="{Binding Observations}" 
                                Style="{StaticResource MacEditorStyle}"
                                AutoSize="TextChanges">
                            <Editor.Behaviors>
                                <behaviors:MacInputBehavior />
                            </Editor.Behaviors>
                        </Editor>
                    </Border>
                </VerticalStackLayout>

                <!-- INTERNAL OBS (Admin Only) -->
                <VerticalStackLayout IsVisible="{Binding IsAdminOrFinance}">
                    <Label Text="Observações Internas (Admin/Financeiro)" TextColor="Red" FontSize="12" FontAttributes="Bold" Margin="0,0,0,6"/>
                    <Border Style="{StaticResource MacInputBorderStyle}" Stroke="Red" HeightRequest="100" Padding="12,8">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding Source={x:Reference InternalObsEditor}, Path=IsFocused}" Value="True">
                                <Setter Property="Stroke" Value="Red"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                            </DataTrigger>
                        </Border.Triggers>
                        <Editor x:Name="InternalObsEditor"
                                Text="{Binding InternalObservations}" 
                                Style="{StaticResource MacEditorStyle}"
                                AutoSize="TextChanges">
                            <Editor.Behaviors>
                                <behaviors:MacInputBehavior />
                            </Editor.Behaviors>
                        </Editor>
                    </Border>
                </VerticalStackLayout>

                <!-- PRODUCTS TABLE -->
                <Border StrokeShape="RoundRectangle 10" BackgroundColor="{DynamicResource CardBackgroundColor}" StrokeThickness="0" Padding="0">
                    <VerticalStackLayout>
                        <!-- Table Header -->
                        <Grid Padding="10" BackgroundColor="{DynamicResource PageBackgroundColor}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="0.65*" />
                                <ColumnDefinition Width="0.35*" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="{Binding FinancialColumnWidth}" />
                                <ColumnDefinition Width="{Binding FinancialColumnWidth}" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Produto" FontAttributes="Bold" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="1" Text="Cor" FontAttributes="Bold" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="2" Text="Tam" FontAttributes="Bold" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="3" Text="Qtd" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="4" Text="Alt (m)" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="5" Text="Larg (m)" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="6" Text="M²" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="12" TextColor="{DynamicResource BodyTextColor}"/>
                            <Label Grid.Column="7" Text="Preço" FontAttributes="Bold" HorizontalTextAlignment="End" FontSize="12" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding ShowFinancials}"/>
                            <Label Grid.Column="8" Text="Total" FontAttributes="Bold" HorizontalTextAlignment="End" FontSize="12" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding ShowFinancials}"/>
                            <Label Grid.Column="9" Text="" />
                        </Grid>

                        <!-- Items -->
                        <CollectionView ItemsSource="{Binding Items}" HeightRequest="300">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5" RowSpacing="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="0.65*" />
                                            <ColumnDefinition Width="0.35*" />
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="{Binding FinancialColumnWidth}" />
                                            <ColumnDefinition Width="{Binding FinancialColumnWidth}" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout VerticalOptions="Center">
                                            <Label Text="{Binding ProductName}" FontAttributes="Bold" LineBreakMode="TailTruncation" TextColor="{DynamicResource BodyTextColor}"/>
                                            <Label Text="{Binding ProductCode}" FontSize="10" TextColor="Gray"/>
                                        </VerticalStackLayout>
                                        
                                        <Border Grid.Column="1" StrokeShape="RoundRectangle 5" StrokeThickness="1" Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" BackgroundColor="Transparent" HeightRequest="30" VerticalOptions="Center">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding SelectColorCommand}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="{Binding Color}" VerticalOptions="Center" HorizontalOptions="Start" FontSize="12" TextColor="{DynamicResource BodyTextColor}" LineBreakMode="TailTruncation" Margin="5,0"/>
                                        </Border>

                                        <Border Grid.Column="2" StrokeShape="RoundRectangle 5" StrokeThickness="1" Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" BackgroundColor="Transparent" HeightRequest="30" VerticalOptions="Center">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding SelectSizeCommand}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="{Binding Size}" VerticalOptions="Center" HorizontalOptions="Start" FontSize="12" TextColor="{DynamicResource BodyTextColor}" LineBreakMode="TailTruncation" Margin="5,0"/>
                                        </Border>

                                        <Entry Grid.Column="3" Text="{Binding Quantity}" Keyboard="Numeric" HorizontalTextAlignment="Center" Style="{StaticResource MacEntryStyle}" HeightRequest="30">
                                            <Entry.Behaviors>
                                                <behaviors:SelectAllOnFocusBehavior />
                                                <behaviors:MacInputBehavior />
                                            </Entry.Behaviors>
                                        </Entry>
                                        <Entry Grid.Column="4" Text="{Binding Height}" Keyboard="Numeric" HorizontalTextAlignment="Center" Style="{StaticResource MacEntryStyle}" HeightRequest="30">
                                            <Entry.Behaviors>
                                                <behaviors:SelectAllOnFocusBehavior />
                                                <behaviors:MacInputBehavior />
                                            </Entry.Behaviors>
                                        </Entry>
                                        <Entry Grid.Column="5" Text="{Binding Width}" Keyboard="Numeric" HorizontalTextAlignment="Center" Style="{StaticResource MacEntryStyle}" HeightRequest="30">
                                            <Entry.Behaviors>
                                                <behaviors:SelectAllOnFocusBehavior />
                                                <behaviors:MacInputBehavior />
                                            </Entry.Behaviors>
                                        </Entry>
                                        <Entry Grid.Column="6" Text="{Binding M2, StringFormat='{0:N2}'}" IsReadOnly="True" HorizontalTextAlignment="Center" Style="{StaticResource MacEntryStyle}" HeightRequest="30"/>
                                        
                                        <!-- Price with Euro Symbol -->
                                        <Grid Grid.Column="7" ColumnDefinitions="*, Auto" IsVisible="{Binding ShowFinancials}">
                                            <Entry Text="{Binding UnitPriceDisplay}" Keyboard="Numeric" HorizontalTextAlignment="End" Style="{StaticResource MacEntryStyle}" HeightRequest="30" Unfocused="UnitPrice_Unfocused">
                                                <Entry.Behaviors>
                                                    <behaviors:SelectAllOnFocusBehavior />
                                                    <behaviors:MacInputBehavior />
                                                </Entry.Behaviors>
                                            </Entry>
                                        </Grid>

                                        <Label Grid.Column="8" Text="{Binding Subtotal, StringFormat='{0:N2} €'}" HorizontalTextAlignment="End" VerticalOptions="Center" FontAttributes="Bold" FontSize="12" TextColor="{DynamicResource BodyTextColor}" IsVisible="{Binding ShowFinancials}"/>
                                        
                                        <Button Grid.Column="9" Text="✕" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveLineCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Transparent" TextColor="Red" Padding="0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Add Button -->
                        <Button Text="+ Adicionar Produto" Command="{Binding AddLineCommand}" Margin="10" BackgroundColor="{DynamicResource CardBackgroundColor}" TextColor="#0A84FF" BorderColor="#0A84FF" BorderWidth="1"/>
                    </VerticalStackLayout>
                </Border>

                <!-- TOTALS -->
                <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,40" IsVisible="{Binding ShowFinancials}">
                    <Grid Grid.Column="1" RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="120, 120" RowSpacing="10">
                        <Label Text="Subtotal:" TextColor="Gray" HorizontalTextAlignment="End"/>
                        <Label Grid.Column="1" Text="{Binding SubTotal, StringFormat='{0:N2} €'}" HorizontalTextAlignment="End" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}"/>

                        <Label Grid.Row="1" Text="IVA (23%):" TextColor="Gray" HorizontalTextAlignment="End"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding TaxAmount, StringFormat='{0:N2} €'}" HorizontalTextAlignment="End" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}"/>

                        <Label Grid.Row="2" Text="TOTAL:" TextColor="{DynamicResource BodyTextColor}" FontAttributes="Bold" FontSize="18" HorizontalTextAlignment="End" VerticalOptions="Center"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding TotalAmount, StringFormat='{0:N2} €'}" TextColor="{DynamicResource BodyTextColor}" FontAttributes="Bold" FontSize="18" HorizontalTextAlignment="End" VerticalOptions="Center"/>
                    </Grid>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>