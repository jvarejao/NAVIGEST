<?xml version="1.0" encoding="utf-8"?>
<ContentPage x:Class="NAVIGEST.macOS.Pages.ServicePage"
             x:Name="ServicePageRoot"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:NAVIGEST.macOS.Models"
             xmlns:behaviors="clr-namespace:NAVIGEST.macOS.Behaviors"
             xmlns:pages="clr-namespace:NAVIGEST.macOS.Pages"
             xmlns:converters="clr-namespace:NAVIGEST.macOS.Converters"
             xmlns:strings="clr-namespace:NAVIGEST.Shared.Resources.Strings;assembly=NAVIGEST.Shared"
             x:DataType="{x:Null}"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="{x:Static strings:AppResources.ServicePage_Title}"
             Loaded="OnPageLoaded">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/MacInputStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:DoubleComparisonConverter x:Key="DoubleComparisonConverter" />
            <converters:StringFormatConverter x:Key="StringFormatConverter" />
            <Style TargetType="Entry" x:Key="FormEntry">
                <Setter Property="HeightRequest" Value="44"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- MAIN CONTENT -->
        <Grid RowDefinitions="Auto, *" 
              Padding="24,24,24,0" 
              RowSpacing="16"
              WidthRequest="1200"
              HorizontalOptions="Center">
            
            <!-- HEADER: Search & Add -->
            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="16">
                <!-- Search -->
                <Border Style="{StaticResource MacInputBorderStyle}"
                        HeightRequest="44"
                        Padding="8,0"
                        VerticalOptions="Center">
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding Source={x:Reference SearchEntry}, Path=IsFocused}" Value="True">
                            <Setter Property="Stroke" Value="{StaticResource MacFocusBlue}"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry x:Name="SearchEntry"
                               Placeholder="{x:Static strings:AppResources.ServicePage_SearchPlaceholder}" 
                               Text="{Binding Filter}" 
                               Style="{StaticResource MacEntryStyle}"
                               HeightRequest="44"
                               Margin="0">
                            <Entry.Behaviors>
                                <behaviors:MacInputBehavior />
                            </Entry.Behaviors>
                        </Entry>
                        
                        <Button Grid.Column="1"
                                Text="✕"
                                TextColor="{DynamicResource EntryPlaceholderColor}"
                                BackgroundColor="Transparent"
                                Command="{Binding ClearSearchCommand}"
                                IsVisible="{Binding Filter, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                                WidthRequest="30"
                                HeightRequest="30"
                                Padding="0"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Add Button -->
                <Button Grid.Column="1" 
                        Text="{x:Static strings:AppResources.ServicePage_NewService}" 
                        Command="{Binding NewCommand}"
                        BackgroundColor="#0A84FF" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        CornerRadius="12" 
                        HeightRequest="44"
                        VerticalOptions="Center"
                        Padding="20,0">
                    <Button.Behaviors>
                        <behaviors:ButtonMicroAnimationsBehavior />
                    </Button.Behaviors>
                </Button>
            </Grid>

            <!-- LIST -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding Orders}" SelectionMode="None" Margin="0,0,0,20">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:OrderInfoModel">
                        <Border StrokeThickness="0"
                                BackgroundColor="{DynamicResource CardBackgroundColor}"
                                StrokeShape="RoundRectangle 12"
                                Padding="16">
                            <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="16">
                                
                                <!-- INFO (Left) -->
                                <VerticalStackLayout Spacing="4" Grid.Column="0" VerticalOptions="Center">
                                    <!-- Customer Name -->
                                    <Label Text="{Binding CustomerName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="{DynamicResource BodyTextColor}"
                                           LineBreakMode="TailTruncation"/>
                                    
                                    <!-- Details Row -->
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="{Binding OrderNo}" 
                                               FontSize="14" 
                                               TextColor="{DynamicResource EntryPlaceholderColor}"/>
                                        
                                        <Label Text="•" 
                                               FontSize="14" 
                                               TextColor="{DynamicResource EntryPlaceholderColor}"/>

                                        <Label Text="{Binding OrderStatus}" 
                                               FontSize="14" 
                                               TextColor="{DynamicResource BodyTextColor}"/>
                                    </HorizontalStackLayout>

                                    <Label Text="{Binding OrderDate, Converter={StaticResource StringFormatConverter}, ConverterParameter={x:Static strings:AppResources.ServicePage_CreatedLabel}}" 
                                           FontSize="14" 
                                           TextColor="{DynamicResource EntryPlaceholderColor}"/>

                                    <Label Text="{Binding OrderDateEnt, Converter={StaticResource StringFormatConverter}, ConverterParameter={x:Static strings:AppResources.ServicePage_DeliveryLabel}, TargetNullValue='-'}" 
                                           FontSize="14" 
                                           TextColor="{DynamicResource EntryPlaceholderColor}"/>
                                </VerticalStackLayout>

                                <!-- AMOUNT (Middle) -->
                                <VerticalStackLayout Grid.Column="1" 
                                                     VerticalOptions="Center" 
                                                     HorizontalOptions="End" 
                                                     Spacing="2" 
                                                     MinimumWidthRequest="100"
                                                     IsVisible="{Binding CanSeeFinancials}">
                                    <Label Text="{Binding TotalAmount, StringFormat='{}{0:N2} €'}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="{DynamicResource BodyTextColor}"
                                           HorizontalTextAlignment="End"/>
                                    
                                    <Label Text="{Binding VALORPAGO, Converter={StaticResource StringFormatConverter}, ConverterParameter={x:Static strings:AppResources.ServicePage_ReceivedLabel}}" 
                                           FontSize="12" 
                                           TextColor="#28CD41"
                                           HorizontalTextAlignment="End"/>

                                    <Label Text="{Binding VALORPENDENTE, Converter={StaticResource StringFormatConverter}, ConverterParameter={x:Static strings:AppResources.ServicePage_OwedLabel}}" 
                                           FontSize="12" 
                                           TextColor="#FF3B30"
                                           HorizontalTextAlignment="End"/>
                                </VerticalStackLayout>

                                <!-- ACTIONS (Right) -->
                                <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center">
                                    
                                    <!-- View (PDF) -->
                                    <Button Text="&#xF1C1;" 
                                            FontFamily="FA7Solid" 
                                            FontSize="16"
                                            BackgroundColor="#1900BCD4" 
                                            TextColor="#00BCD4"
                                            CornerRadius="8"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0"
                                            Clicked="OnViewClicked"
                                            CommandParameter="{Binding .}">
                                        <Button.Behaviors>
                                            <behaviors:ButtonMicroAnimationsBehavior />
                                        </Button.Behaviors>
                                    </Button>

                                    <!-- Edit -->
                                    <Button Text="&#xF044;" 
                                            FontFamily="FA7Solid" 
                                            FontSize="16"
                                            BackgroundColor="#190A84FF" 
                                            TextColor="#0A84FF"
                                            CornerRadius="8"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0"
                                            Clicked="OnEditClicked"
                                            CommandParameter="{Binding .}">
                                        <Button.Behaviors>
                                            <behaviors:ButtonMicroAnimationsBehavior />
                                        </Button.Behaviors>
                                    </Button>

                                    <!-- Payment -->
                                    <Button Text="&#xF0d6;" 
                                            FontFamily="FA7Solid" 
                                            FontSize="16"
                                            BackgroundColor="#1928CD41" 
                                            TextColor="#28CD41"
                                            CornerRadius="8"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0"
                                            IsVisible="{Binding CanSeeFinancials}"
                                            IsEnabled="{Binding VALORPENDENTE, Converter={StaticResource DoubleComparisonConverter}, ConverterParameter='gt:0'}"
                                            Clicked="OnPaymentClicked"
                                            CommandParameter="{Binding .}">
                                        <Button.Behaviors>
                                            <behaviors:ButtonMicroAnimationsBehavior />
                                        </Button.Behaviors>
                                    </Button>

                                    <!-- Delete -->
                                    <Button Text="&#xF1F8;" 
                                            FontFamily="FA7Solid" 
                                            FontSize="16"
                                            BackgroundColor="#19FF3B30" 
                                            TextColor="#FF3B30"
                                            CornerRadius="8"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0"
                                            Clicked="OnDeleteClicked"
                                            CommandParameter="{Binding .}">
                                        <Button.Behaviors>
                                            <behaviors:ButtonMicroAnimationsBehavior />
                                        </Button.Behaviors>
                                    </Button>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="{x:Static strings:AppResources.ServicePage_EmptyTitle}" FontSize="18" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}" HorizontalOptions="Center"/>
                        <Label Text="{x:Static strings:AppResources.ServicePage_EmptyMessage}" FontSize="14" TextColor="{DynamicResource BodyTextColor}" Opacity="0.7" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>

        <!-- Overlay -->
        <Grid Grid.RowSpan="2" IsVisible="{Binding IsBusy}" BackgroundColor="#80000000" ZIndex="999">
            <ActivityIndicator IsRunning="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center" Color="White"/>
        </Grid>
    </Grid>
</ContentPage>
