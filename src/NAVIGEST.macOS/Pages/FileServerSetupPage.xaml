<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAVIGEST.macOS.Pages.FileServerSetupPage"
             x:DataType="{x:Null}"
             Title="Configuração Servidor Ficheiros"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="HeaderLabel">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{DynamicResource BodyTextColor}" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="0,10,0,4" />
        </Style>
        <Style TargetType="Entry" x:Key="InputEntry">
            <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
            <Setter Property="TextColor" Value="{DynamicResource BodyTextColor}" />
            <Setter Property="HeightRequest" Value="40" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15" MaximumWidthRequest="600" HorizontalOptions="Center">
            
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" Margin="0,0,0,20">
                <Button Text="&#xF060;" FontFamily="FA7Solid" 
                        BackgroundColor="Transparent" TextColor="{DynamicResource BodyTextColor}" 
                        FontSize="20" Clicked="OnBackClicked" 
                        WidthRequest="40" HeightRequest="40" 
                        HorizontalOptions="Start" />
                <Label Grid.Column="1" Text="Configuração do Servidor de Ficheiros" 
                       FontSize="24" FontAttributes="Bold" 
                       TextColor="{DynamicResource BodyTextColor}" 
                       HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>

            <Label Text="Caminho do Servidor (UNC)" Style="{StaticResource HeaderLabel}" />
            <Entry Text="{Binding Setup.CaminhoServidor}" Placeholder="Ex: \\192.168.1.200\Dados" Style="{StaticResource InputEntry}" />
            <Label Text="Nota: No macOS, este caminho será convertido automaticamente para /Volumes/..." FontSize="12" TextColor="Gray" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                <VerticalStackLayout>
                    <Label Text="Utilizador (Opcional)" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.ServerUser}" Placeholder="Utilizador" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Password (Opcional)" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.ServerPassword}" Placeholder="Password" IsPassword="True" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>
            </Grid>

            <BoxView HeightRequest="1" Color="Gray" Opacity="0.3" Margin="0,10" />

            <Label Text="Subpastas a criar (Opcional)" FontSize="18" FontAttributes="Bold" TextColor="{DynamicResource BodyTextColor}" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                    <Label Text="Pasta 1" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA1}" Placeholder="Ex: ORCAMENTOS" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                    <Label Text="Pasta 2" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA2}" Placeholder="Ex: OBRA" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                    <Label Text="Pasta 3" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA3}" Placeholder="Ex: FOTOS" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                    <Label Text="Pasta 4" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA4}" Placeholder="Ex: DESENHOS" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Grid.Column="0">
                    <Label Text="Pasta 5" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA5}" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                    <Label Text="Pasta 6" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA6}" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Grid.Row="3" Grid.Column="0">
                    <Label Text="Pasta 7" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA7}" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="3" Grid.Column="1">
                    <Label Text="Pasta 8" Style="{StaticResource HeaderLabel}" />
                    <Entry Text="{Binding Setup.SERV1PASTA8}" Style="{StaticResource InputEntry}" />
                </VerticalStackLayout>
            </Grid>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,30,0,0">
                <Button Text="Cancelar" Command="{Binding CancelCommand}" BackgroundColor="Gray" TextColor="White" WidthRequest="120" HeightRequest="44" CornerRadius="8"/>
                <Button Text="Guardar" Command="{Binding SaveCommand}" BackgroundColor="#0A84FF" TextColor="White" WidthRequest="120" HeightRequest="44" CornerRadius="8" FontAttributes="Bold"/>
            </HorizontalStackLayout>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#0A84FF" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
