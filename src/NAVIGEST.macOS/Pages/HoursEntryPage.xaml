<?xml version="1.0" encoding="utf-8"?>
<ContentPage x:Class="NAVIGEST.macOS.Pages.HoursEntryPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NAVIGEST.macOS.ViewModels"
             xmlns:models="clr-namespace:NAVIGEST.macOS.Models"
             xmlns:converters="clr-namespace:NAVIGEST.macOS.Converters"
             xmlns:pages="clr-namespace:NAVIGEST.macOS.Pages"
             xmlns:res="clr-namespace:NAVIGEST.Shared.Resources.Strings;assembly=NAVIGEST.Shared"
             x:DataType="vm:HorasColaboradorViewModel"
             BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#000000}"
             Title="â±ï¸ Horas de Colaborador">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:DoubleComparisonConverter x:Key="DoubleComparisonConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Padding="0" RowSpacing="0">
        
        <!-- TABS HEADER -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,*,*" 
              ColumnSpacing="8"
              Padding="16,8,16,0"
              BackgroundColor="{AppThemeBinding Light=#F5F5F7, Dark=#1C1C1E}">
            <Border x:Name="Tab1Border"
                    Grid.Column="0"
                    BackgroundColor="{AppThemeBinding Light=#0A84FF, Dark=#0A84FF}"
                    StrokeThickness="0"
                    Padding="12,10"
                    StrokeShape="RoundRectangle 8,8,0,0">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTab1Tapped"/>
                </Border.GestureRecognizers>
                <Label x:Name="Tab1Label"
                       Text="{x:Static res:AppResources.Hours_TabSummary}"
                       TextColor="White"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
            </Border>
            
            <Border x:Name="Tab2Border"
                    Grid.Column="1"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}"
                    StrokeThickness="0"
                    Padding="12,10"
                    StrokeShape="RoundRectangle 8,8,0,0">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTab2Tapped"/>
                </Border.GestureRecognizers>
                <Label x:Name="Tab2Label"
                       Text="{x:Static res:AppResources.Hours_TabList}"
                       TextColor="{AppThemeBinding Light=#6E6E73, Dark=#8E8E93}"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>
            </Border>
            
            <Border x:Name="Tab3Border"
                    Grid.Column="2"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}"
                    StrokeThickness="0"
                    Padding="12,10"
                    StrokeShape="RoundRectangle 8,8,0,0">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTab3Tapped"/>
                </Border.GestureRecognizers>
                <Label x:Name="Tab3Label"
                       Text="{x:Static res:AppResources.Hours_TabCalendar}"
                       TextColor="{AppThemeBinding Light=#6E6E73, Dark=#8E8E93}"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>
            </Border>
        </Grid>

        <!-- TAB CONTENT -->
        <Grid Grid.Row="1" BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#000000}">
            <ContentView x:Name="TabContentView"
                         VerticalOptions="Fill"/>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid Grid.RowSpan="2"
              IsVisible="{Binding IsBusy}"
              BackgroundColor="#66000000">
            <ActivityIndicator IsRunning="True"
                               Color="{AppThemeBinding Light=#0A84FF, Dark=#0A84FF}"
                               WidthRequest="48"
                               HeightRequest="48"/>
        </Grid>

        <!-- DAILY SUMMARY OVERLAY (Fake Popup) -->
        <Grid x:Name="DailySummaryOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              BackgroundColor="#80000000"
              IgnoreSafeArea="True"
              ZIndex="999">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCloseDailySummaryClicked"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                    StrokeThickness="0"
                    Padding="20"
                    StrokeShape="RoundRectangle 18"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="760"
                    HeightRequest="1000">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer /> <!-- Prevent close when tapping inside -->
                </Border.GestureRecognizers>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,*,Auto" RowSpacing="15">
                    <!-- Header -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label x:Name="OverlayDateLabel"
                                   Text="21 de Novembro"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label x:Name="OverlayWeekendLabel"
                                   Text="ðŸŽ‰ Fim de Semana"
                                   FontSize="12"
                                   TextColor="#FF9500"
                                   HorizontalOptions="Center"
                                   IsVisible="False"/>
                            <Label x:Name="OverlayTotalHoursLabel"
                                   Text="Total: 8h"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        </VerticalStackLayout>
                        
                        <!-- Add Button -->
                        <Button Grid.Column="1"
                                Text="+"
                                FontSize="38"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource AppAccent}"
                                Clicked="OnOverlayAddClicked"
                                WidthRequest="40"
                                HeightRequest="40"
                                Padding="0"/>
                    </Grid>

                    <!-- List of Entries -->
                    <CollectionView Grid.Row="1"
                                    x:Name="OverlayEntriesCollectionView"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:HoraColaborador">
                                <Border StrokeThickness="0"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
                                        StrokeShape="RoundRectangle 8"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
                                        <!-- Row 0: Collaborator Name (Visible if showing all) -->
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding NomeColaborador}"
                                               FontAttributes="Bold"
                                               FontSize="13"
                                               TextColor="{DynamicResource AppAccent}"
                                               IsVisible="{Binding Source={RelativeSource AncestorType={x:Type pages:HoursEntryPage}}, Path=ShowCollaboratorName}" 
                                               Margin="0,0,0,4"/>

                                        <!-- Row 0: Hours (Green/Orange) -->
                                        <HorizontalStackLayout Grid.Row="0" Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                            <Label Text="{Binding HorasTrab, StringFormat='{0:0.##}h'}" 
                                                   TextColor="#4CD964" 
                                                   FontAttributes="Bold"
                                                   FontSize="18"/>
                                            <Label Text="{Binding HorasExtras, StringFormat='(+{0:0.##}h)'}" 
                                                   TextColor="#FF9500" 
                                                   FontAttributes="Bold"
                                                   FontSize="18"
                                                   IsVisible="{Binding HorasExtras, Converter={StaticResource DoubleComparisonConverter}, ConverterParameter='gt:0'}"/>
                                        </HorizontalStackLayout>
                                        
                                        <!-- Row 1: Client/Absence with Icon -->
                                        <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="6" VerticalOptions="Center">
                                            <Label Text="{Binding DisplayIcon}"
                                                   FontFamily="FA7Solid"
                                                   FontSize="16"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding DisplayText}"
                                                   FontAttributes="Bold"
                                                   FontSize="14"
                                                   LineBreakMode="TailTruncation"
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                        </HorizontalStackLayout>

                                        <!-- Edit Button -->
                                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                                                Text="&#xf044;"
                                                FontFamily="FA7Solid"
                                                FontSize="18"
                                                BackgroundColor="#190A84FF"
                                                TextColor="#0A84FF"
                                                CornerRadius="8"
                                                Clicked="OnOverlayEditClicked"
                                                CommandParameter="{Binding .}"
                                                WidthRequest="44"
                                                HeightRequest="44"
                                                Padding="0"/>

                                        <!-- Delete Button -->
                                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="3"
                                                Text="&#xf2ed;"
                                                FontFamily="FA7Solid"
                                                FontSize="18"
                                                BackgroundColor="#19FF3B30"
                                                TextColor="#FF3B30"
                                                CornerRadius="8"
                                                Clicked="OnOverlayDeleteClicked"
                                                CommandParameter="{Binding .}"
                                                WidthRequest="44"
                                                HeightRequest="44"
                                                Padding="0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Close Button -->
                    <Button Grid.Row="2"
                            Text="Fechar"
                            BackgroundColor="#0A84FF"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="OnCloseDailySummaryClicked"/>
                </Grid>
            </Border>
        </Grid>



        <!-- NOVA HORA OVERLAY (Replaces Popup) -->
        <Grid x:Name="NovaHoraOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              BackgroundColor="#80000000"
              IgnoreSafeArea="True"
              ZIndex="2000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCloseNovaHoraOverlayClicked"/>
            </Grid.GestureRecognizers>
            
            <ContentView x:Name="NovaHoraContent"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">
                 <ContentView.GestureRecognizers>
                    <TapGestureRecognizer /> <!-- Block taps -->
                 </ContentView.GestureRecognizers>
            </ContentView>
        </Grid>

        <!-- LIST PICKER OVERLAY -->
        <Grid x:Name="ListPickerOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              BackgroundColor="#80000000"
              IgnoreSafeArea="True"
              ZIndex="1001">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCloseListPickerClicked"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}"
                    StrokeThickness="0"
                    Padding="20"
                    StrokeShape="RoundRectangle 18"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="400"
                    HeightRequest="600">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="15">
                    <Label x:Name="ListPickerTitleLabel"
                           Text="Selecione"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                    <!-- Search Bar -->
                    <Border Grid.Row="1" 
                            StrokeShape="RoundRectangle 10" 
                            BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}"
                            StrokeThickness="0"
                            Padding="8,0">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="ListPickerSearchEntry"
                                   Placeholder="{x:Static res:AppResources.Common_Search}"
                                   TextChanged="OnListPickerSearchTextChanged"
                                   BackgroundColor="Transparent"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                   HeightRequest="36"/>
                            
                            <Button Grid.Column="1"
                                    x:Name="ListPickerClearButton"
                                    Text="âœ•"
                                    TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"
                                    BackgroundColor="Transparent"
                                    Clicked="OnListPickerClearSearchClicked"
                                    IsVisible="False"
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    Padding="0"/>
                        </Grid>
                    </Border>

                    <CollectionView Grid.Row="2" x:Name="ListPickerCollectionView" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Border StrokeThickness="0" BackgroundColor="Transparent" Padding="12">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnListPickerItemTapped" CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding .}" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Grid.Row="3" 
                            Text="{x:Static res:AppResources.Common_Cancel}" 
                            TextColor="{AppThemeBinding Light=#0A84FF, Dark=#0A84FF}"
                            BackgroundColor="Transparent"
                            Clicked="OnCloseListPickerClicked"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
