<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="NAVIGEST.macOS.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NAVIGEST.macOS.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />

            <!-- Dicionários estáveis (não mudam com o tema) -->
            <ResourceDictionary.MergedDictionaries>
                <!-- COLORS FIRST: Load colors before anything that uses DynamicResource -->
                <ResourceDictionary Source="Resources/Styles/Colors.Light.xaml" />
                
                <!-- Apple/macOS Style -->
                <ResourceDictionary Source="Resources/Styles/AppleStyles.xaml" />
                
                <!-- Botões -->
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml" />

                <!-- Design tokens (tipos, espaçamentos, etc.) -->
                <ResourceDictionary Source="Resources/Styles/DesignSystem.xaml" />

                <!-- Inputs centralizados com DynamicResource para cores -->
                <ResourceDictionary Source="Resources/Styles/Inputs.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- NOTA: Colors_Light é carregado por padrão acima. Colors_Dark pode ser injetado dinamicamente via App.xaml.cs -->
        </ResourceDictionary>
    </Application.Resources>
</Application>

