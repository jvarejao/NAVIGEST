<?xml version="1.0" encoding="utf-8"?>
<ContentPage x:Class="NAVIGEST.Android.Pages.HorasColaboradorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NAVIGEST.Android.PageModels"
             xmlns:models="clr-namespace:NAVIGEST.Android.Models"
             xmlns:converters="clr-namespace:NAVIGEST.Android.Converters"
             x:DataType="vm:HorasColaboradorViewModel"
             BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#000000}"
             Title="â±ï¸ Horas de Colaborador">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringNullOrEmptyToBoolConverter x:Key="StringNullOrEmptyToBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="16">
        
        <!-- ROW 0: SMART STATS CARD (Painel de Controle) -->
        <Border Grid.Row="0"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1C1C1E}"
                StrokeThickness="0"
                Padding="16"
                StrokeShape="RoundRectangle 12"
                Margin="0,0,0,12">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.15" Radius="8" Offset="0,2"/>
            </Border.Shadow>
            
            <VerticalStackLayout Spacing="12">
                <!-- PerÃ­odo + Colaborador selecionado -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                    <VerticalStackLayout>
                        <Label Text="ðŸ“… PerÃ­odo"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                        <Label Text="{Binding PeriodoSelecionado}"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="ðŸ‘¤ Colaborador"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                        <Label Text="{Binding ColaboradorDisplay}"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#007AFF, Dark:#0A84FF}"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- Total Geral em Destaque -->
                <Border BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}"
                        StrokeThickness="0"
                        Padding="12"
                        StrokeShape="RoundRectangle 8">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="Total Horas"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                            <Label Text="{Binding TotalGeral}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#34C759, Dark=#32D74B}"/>
                        </VerticalStackLayout>
                        
                        <!-- Alerta de Extras se houver -->
                        <Label Grid.Column="1"
                               Text="{Binding AlertaExtras}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#FF9500"
                               IsVisible="{Binding TemExtras}"
                               VerticalOptions="Center"
                               HorizontalOptions="End"/>
                    </Grid>
                </Border>

                <!-- Stats: Normal | Extra | MÃ©dia -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                    <Border BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}" 
                            StrokeThickness="0" Padding="8" StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout>
                            <Label Text="ðŸ“Š Normal"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                            <Label Text="{Binding TotalHorasNormais}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#007AFF, Dark:#0A84FF}"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}" 
                            StrokeThickness="0" Padding="8" StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout>
                            <Label Text="âš¡ Extra"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#8E8E93, Dark:#8E8E93}"/>
                            <Label Text="{Binding TotalHorasExtra}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#FF9500"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border Grid.Column="2" BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark:#2C2C2E}" 
                            StrokeThickness="0" Padding="8" StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout>
                            <Label Text="ðŸ“ˆ MÃ©dia/dia"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#8E8E93, Dark:#8E8E93}"/>
                            <Label Text="{Binding MediaHorasDia, StringFormat='{0:0.0}h'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#34C759, Dark:#32D74B}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Breakdown: X colaboradores, Y dias -->
                <Label FontSize="12"
                       TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
                       HorizontalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="ðŸ‘¥ " FontSize="12"/>
                            <Span Text="{Binding TotalColaboradores}" FontSize="12" FontAttributes="Bold"/>
                            <Span Text=" colaboradores | ðŸ“… " FontSize="12"/>
                            <Span Text="{Binding TotalDias}" FontSize="12" FontAttributes="Bold"/>
                            <Span Text=" dias" FontSize="12"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
        </Border>

        <!-- ROW 1: FILTROS ACCORDION (ColapsÃ¡vel) -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1C1C1E}"
                StrokeThickness="0"
                Padding="0"
                StrokeShape="RoundRectangle 12"
                Margin="0,0,0,12">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.15" Radius="8" Offset="0,2"/>
            </Border.Shadow>

            <!-- BotÃ£o do Accordion -->
            <VerticalStackLayout>
                <Button Text="{Binding FiltrosAbertos, StringFormat='{0:ðŸ”¼ Filtros AvanÃ§ados|ðŸ”½ Filtros AvanÃ§ados}'}"
                        Command="{Binding AlternarFiltrosCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#007AFF, Dark:#0A84FF}"
                        FontAttributes="Bold"
                        FontSize="14"
                        Padding="16"
                        BorderWidth="0"/>

                <!-- ConteÃºdo do Accordion (ColapsÃ¡vel) -->
                <VerticalStackLayout IsVisible="{Binding FiltrosAbertos}"
                                    Padding="16,0,16,16"
                                    Spacing="12">
                    <!-- Colaborador -->
                    <VerticalStackLayout>
                        <Label Text="ðŸ‘¤ Selecione Colaborador" 
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#8E8E93, Dark:#8E8E93}"
                               Margin="0,0,0,4"/>
                        <Picker ItemsSource="{Binding Colaboradores}"
                                ItemDisplayBinding="{Binding DisplayText}"
                                SelectedItem="{Binding ColaboradorSelecionado}"
                                BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark:#2C2C2E}"
                                TextColor="{AppThemeBinding Light=#000000, Dark:#FFFFFF}"/>
                    </VerticalStackLayout>

                    <!-- Data Intervalo -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout>
                            <Label Text="ðŸ“… Data InÃ­cio" 
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
                                   Margin="0,0,0,4"/>
                            <DatePicker Date="{Binding DataFiltroInicio}"
                                        BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark:#2C2C2E}"
                                        TextColor="{AppThemeBinding Light:#000000, Dark:#FFFFFF}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="ðŸ“… Data Fim" 
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
                                   Margin="0,0,0,4"/>
                            <DatePicker Date="{Binding DataFiltroFim}"
                                        BackgroundColor="{AppThemeBinding Light:#F2F2F7, Dark:#2C2C2E}"
                                        TextColor="{AppThemeBinding Light:#000000, Dark:#FFFFFF}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- BotÃµes de AÃ§Ã£o -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="ðŸ”„ Atualizar"
                                Command="{Binding CarregarHorasCommand}"
                                BackgroundColor="{AppThemeBinding Light=#007AFF, Dark:#0A84FF}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="40"/>
                        
                        <Button Grid.Column="1"
                                Text="âž• Novo Registo"
                                Command="{Binding AbrirNovoRegistoCommand}"
                                BackgroundColor="{AppThemeBinding Light=#34C759, Dark:#32D74B}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="40"/>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- ROW 2: STATUS MESSAGE -->
        <Label Grid.Row="2"
               Text="{Binding Mensagem}"
               FontSize="12"
               TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,12"/>

        <!-- ROW 3: LISTA COMPACTA -->
        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding CarregarHorasCommand}">
            <CollectionView ItemsSource="{Binding HorasList}"
                            SelectionMode="None"
                            BackgroundColor="Transparent">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="12">
                        <Label Text="ðŸ“‹"
                               FontSize="48"
                               HorizontalOptions="Center"/>
                        <Label Text="Nenhum registo encontrado"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#8E8E93, Dark:#8E8E93}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:HoraColaborador">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <!-- Editar -->
                                    <SwipeItemView CommandParameter="{Binding .}" 
                                                   Invoked="OnEditarSwipe">
                                        <Grid WidthRequest="80" Padding="12" BackgroundColor="Transparent">
                                            <Border BackgroundColor="#FFC107"
                                                    WidthRequest="56" HeightRequest="56"
                                                    HorizontalOptions="Center" VerticalOptions="Center"
                                                    StrokeThickness="0">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="28"/>
                                                </Border.StrokeShape>
                                                <Label Text="&#xF044;" FontFamily="FA7Solid" FontSize="22"
                                                       TextColor="#333333" HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>
                                        </Grid>
                                    </SwipeItemView>

                                    <!-- Eliminar -->
                                    <SwipeItemView CommandParameter="{Binding .}" 
                                                   Invoked="OnEliminarSwipe">
                                        <Grid WidthRequest="80" Padding="12" BackgroundColor="Transparent">
                                            <Border BackgroundColor="{AppThemeBinding Light=#F44336, Dark=#EF5350}"
                                                    WidthRequest="56" HeightRequest="56"
                                                    HorizontalOptions="Center" VerticalOptions="Center"
                                                    StrokeThickness="0">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="28"/>
                                                </Border.StrokeShape>
                                                <Label Text="&#xF1F8;" FontFamily="FA7Solid" FontSize="22"
                                                       TextColor="White" HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>
                                        </Grid>
                                    </SwipeItemView>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- Item Compacto -->
                            <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark:#1C1C1E}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 8"
                                    Stroke="{AppThemeBinding Light=#E5E5EA, Dark=#3A3A3C}"
                                    Padding="12"
                                    Margin="0,4">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnItemTapped"/>
                                </Border.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <!-- Data (coluna esquerda) -->
                                    <VerticalStackLayout WidthRequest="60">
                                        <Label Text="{Binding DataTrabalho, StringFormat='{0:dd}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light=#007AFF, Dark:#0A84FF}"
                                               HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding DataTrabalho, StringFormat='{0:MMM}'}"
                                               FontSize="10"
                                               TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
                                               HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>

                                    <!-- Detalhes (meio) -->
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                        <Label Text="{Binding NomeColaborador}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light:#000000, Dark:#FFFFFF}"/>
                                        <Label Text="{Binding HorasTotaisFormatted, StringFormat='ðŸ• {0}'}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light:#34C759, Dark:#32D74B}"/>
                                        <Label Text="{Binding ClienteInfo, StringFormat='ðŸ¢ {0}'}"
                                               FontSize="11"
                                               TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
                                               LineBreakMode="TailTruncation"/>
                                    </VerticalStackLayout>

                                    <!-- Total horas (direita) -->
                                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Spacing="2">
                                        <Label Text="{Binding HorasTotais, StringFormat='{0:0.0}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light:#007AFF, Dark:#0A84FF}}"
                                               HorizontalTextAlignment="End"/>
                                        <Label Text="horas"
                                               FontSize="10"
                                               TextColor="{AppThemeBinding Light:#8E8E93, Dark:#8E8E93}"
                                               HorizontalTextAlignment="End"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- ROW 4: LOADING OVERLAY -->
        <Grid Grid.RowSpan="5"
              IsVisible="{Binding IsBusy}"
              BackgroundColor="#66000000">
            <ActivityIndicator IsRunning="True"
                               Color="{AppThemeBinding Light:#007AFF, Dark:#0A84FF}"
                               WidthRequest="48"
                               HeightRequest="48"/>
        </Grid>
    </Grid>
</ContentPage>
