<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAVIGEST.Android.Pages.AboutPage"
             Title="Sobre"
             BackgroundColor="{DynamicResource BodyBg}">

    <VerticalStackLayout Padding="16" Spacing="12">
        <!-- Título -->
        <Label Text="Sobre" FontSize="24" FontAttributes="Bold" TextColor="{DynamicResource BodyFg}" Margin="0,0,0,8"/>

        <!-- Card de versão -->
        <Frame BorderColor="{DynamicResource BodyFg}" CornerRadius="12" HasShadow="False" Padding="16" BackgroundColor="{DynamicResource SidebarItem}">
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="&#xF05A;" FontFamily="FA7Solid" FontSize="18" TextColor="{DynamicResource SidebarAccent}" VerticalOptions="Center"/>
                    <Label Text="Versão da Aplicação" FontSize="14" FontAttributes="Bold" TextColor="{DynamicResource BodyFg}" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <Label x:Name="VersionLabel" Text="Versão 1.0.0" FontSize="16" TextColor="{DynamicResource SidebarAccent}"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Botão de verificar atualizações -->
        <Button x:Name="CheckUpdatesButton" 
                Text="Verificar Atualizações" 
                BackgroundColor="#4F46E5"
                TextColor="White"
                FontSize="14"
                Padding="16,8"
                CornerRadius="8"
                Clicked="OnCheckUpdatesClicked"/>

        <!-- Status de atualização -->
        <Label x:Name="UpdateStatusLabel" 
               Text="" 
               TextColor="{DynamicResource BodyFg}" 
               FontSize="12"
               IsVisible="False"
               Margin="0,4,0,0"/>

        <!-- Divisor -->
        <BoxView Color="{DynamicResource SidebarAccent}" HeightRequest="1" Margin="0,8"/>

        <!-- Informações da app -->
        <VerticalStackLayout Spacing="8">
            <Label Text="Informações" FontSize="14" FontAttributes="Bold" TextColor="{DynamicResource BodyFg}"/>
            
            <HorizontalStackLayout Spacing="8">
                <Label Text="Nome:" FontSize="12" TextColor="{DynamicResource BodyFg}" WidthRequest="80"/>
                <Label Text="NAVIGEST" FontSize="12" TextColor="{DynamicResource SidebarAccent}"/>
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Spacing="8">
                <Label Text="Plataforma:" FontSize="12" TextColor="{DynamicResource BodyFg}" WidthRequest="80"/>
                <Label x:Name="PlatformLabel" Text="Android" FontSize="12" TextColor="{DynamicResource SidebarAccent}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
