		</MauiXaml>
		<MauiXaml Update="Pages\WelcomePage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</MauiXaml>
		<MauiXaml Update="Resources\Styles\Buttons.xaml">
			<Generator>MSBuild:Compile</Generator>
		</MauiXaml>
