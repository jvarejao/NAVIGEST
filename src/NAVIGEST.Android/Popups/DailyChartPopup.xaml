            StrokeShape="RoundRectangle 16"
            WidthRequest="350"
            HeightRequest="400"
            Padding="16">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="12">
            <Label x:Name="TitleLabel" 
                   Text="Detalhe DiÃ¡rio" 
                   FontAttributes="Bold" 
