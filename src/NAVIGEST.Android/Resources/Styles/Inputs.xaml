<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ====== Cores base (sem theme-binding, para compilar já) ====== -->
    <Color x:Key="InputBgColor">#0F1115</Color>
    <Color x:Key="InputTextColor">#EAECEF</Color>
    <Color x:Key="InputPlaceholderColor">#7A8496</Color>
    <Color x:Key="InputBorderColor">#2A2F3A</Color>
    <Color x:Key="InputDisabledBg">#1A1C22</Color>
    <Color x:Key="InputDisabledText">#8A8F9A</Color>

    <!-- “Neon” -->
    <Color x:Key="NeonGreen">#39FF14</Color>
    <Color x:Key="NeonOrange">#FF7A00</Color>
    <Color x:Key="NeonRed">#FF1744</Color>

    <!-- ====== Dimensão/raio ====== -->
    <CornerRadius x:Key="InputCornerRadius">12</CornerRadius>
    <OnPlatform x:Key="InputFontSize" x:TypeArguments="x:Double">
        <On Platform="Android" Value="16"/>
        <On Platform="iOS"     Value="16"/>
        <On Platform="WinUI"   Value="14"/>
    </OnPlatform>

    <!-- ====== Sombras ====== -->
    <Shadow x:Key="ShadowNone" Brush="Transparent" Opacity="0" Radius="0" />
    <Shadow x:Key="ShadowNeon" Brush="{StaticResource NeonGreen}" Opacity="0.6" Radius="12" />
    <Shadow x:Key="ShadowError" Brush="{StaticResource NeonOrange}" Opacity="0.75" Radius="14" />

    <!-- ====== Estilo BASE para inputs ====== -->
    <Style x:Key="BaseInput" TargetType="View">
        <Setter Property="HeightRequest" Value="48"/>
        <Setter Property="Margin" Value="0,6,0,6"/>
        <Setter Property="Shadow" Value="{StaticResource ShadowNone}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="Shadow" Value="{StaticResource ShadowNeon}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.6" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Invalid">
                        <VisualState.Setters>
                            <Setter Property="Shadow" Value="{StaticResource ShadowError}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ====== ENTRY (PASSWORD, iOS-safe, Light/Dark via DynamicResource) ====== -->
    <Style TargetType="Entry" x:Key="Entry.Password">
        <!-- NADA de VisualState/Sombra aqui para não provocar flicker no iOS -->
        <Setter Property="IsPassword" Value="True" />
        <Setter Property="FontSize" Value="{StaticResource InputFontSize}" />
        <!-- Usa as cores do teu sistema de cores (Light/Dark) -->
        <Setter Property="BackgroundColor" Value="{DynamicResource EntryBackgroundColor}" />
        <Setter Property="TextColor" Value="{DynamicResource EntryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource EntryPlaceholderColor}" />
        <!-- Consistência de layout -->
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Margin" Value="0,6,0,6" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <!-- Evitar triggers de relayout/anim no iOS -->
        <Setter Property="ClearButtonVisibility" Value="Never" />
        <Setter Property="IsTextPredictionEnabled" Value="False" />
        <Setter Property="IsSpellCheckEnabled" Value="False" />
        <!-- Mantém o cursor e seleção default do sistema -->
    </Style>


    <!-- ====== ENTRY ====== -->
    <Style TargetType="Entry" x:Key="Entry.Primary" BasedOn="{StaticResource BaseInput}">
        <Setter Property="FontSize" Value="{StaticResource InputFontSize}" />
        <Setter Property="TextColor" Value="{StaticResource InputTextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource InputPlaceholderColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
                            <Setter Property="Shadow" Value="{StaticResource ShadowNeon}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource InputDisabledBg}" />
                            <Setter Property="TextColor" Value="{StaticResource InputDisabledText}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Invalid">
                        <VisualState.Setters>
                            <Setter Property="Shadow" Value="{StaticResource ShadowError}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ====== EDITOR ====== -->
    <Style TargetType="Editor" x:Key="Editor.Primary" BasedOn="{StaticResource BaseInput}">
        <Setter Property="FontSize" Value="{StaticResource InputFontSize}" />
        <Setter Property="TextColor" Value="{StaticResource InputTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
        <Setter Property="AutoSize" Value="TextChanges" />
        <Setter Property="MinimumHeightRequest" Value="80" />
        <Setter Property="VerticalOptions" Value="Start" />
    </Style>

    <!-- ====== PICKER ====== -->
    <Style TargetType="Picker" x:Key="Picker.Primary" BasedOn="{StaticResource BaseInput}">
        <Setter Property="FontSize" Value="{StaticResource InputFontSize}" />
        <Setter Property="TextColor" Value="{StaticResource InputTextColor}" />
        <Setter Property="TitleColor" Value="{StaticResource InputPlaceholderColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>

    <!-- ====== DATEPICKER ====== -->
    <Style TargetType="DatePicker" x:Key="DatePicker.Primary" BasedOn="{StaticResource BaseInput}">
        <Setter Property="FontSize" Value="{StaticResource InputFontSize}" />
        <Setter Property="TextColor" Value="{StaticResource InputTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
        <Setter Property="MinimumDate" Value="2000-01-01" />
    </Style>

    <!-- ====== SEARCHBAR ====== -->
    <Style TargetType="SearchBar" x:Key="SearchBar.Primary" BasedOn="{StaticResource BaseInput}">
        <Setter Property="FontSize" Value="{StaticResource InputFontSize}" />
        <Setter Property="TextColor" Value="{StaticResource InputTextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource InputPlaceholderColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource InputBgColor}" />
        <Setter Property="CancelButtonColor" Value="{StaticResource NeonGreen}" />
    </Style>

    <!-- (Opcional) aplicação global:
  <Style TargetType="Entry" BasedOn="{StaticResource Entry.Primary}" />
  <Style TargetType="Editor" BasedOn="{StaticResource Editor.Primary}" />
  <Style TargetType="Picker" BasedOn="{StaticResource Picker.Primary}" />
  <Style TargetType="DatePicker" BasedOn="{StaticResource DatePicker.Primary}" />
  <Style TargetType="SearchBar" BasedOn="{StaticResource SearchBar.Primary}" />
  -->
</ResourceDictionary>
