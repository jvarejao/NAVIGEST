<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NAVIGEST.Android.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:NAVIGEST.Android.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="NAVIGEST">

    <!-- ✅ SplashIntroPage como CONTEÚDO INICIAL (não rota) -->
    <ShellContent ContentTemplate="{DataTemplate pages:SplashIntroPage}" Route="splash" />
    
    <!-- Rotas/páginas existentes -->
    <ShellContent ContentTemplate="{DataTemplate pages:WelcomePage}" Route="welcome" />
    <ShellContent ContentTemplate="{DataTemplate pages:MainYahPage}" Route="mainpage" />

    <!-- Página de Horas -->
    <ShellContent
        Title="Horas"
        Route="hours-entry"
        ContentTemplate="{DataTemplate pages:HoursEntryPage}" />

    <!-- Página de Teste SwipeView -->
    <ShellContent
        Title="Swipe Proof"
        Route="swipe-proof"
        ContentTemplate="{DataTemplate pages:SwipeProofPage}" />
</Shell>
